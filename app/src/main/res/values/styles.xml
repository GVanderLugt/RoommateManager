<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <!-- Action Bar Style Defined -->
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <!-- Relative Layout Style Defined -->
    <style name="AppTheme.RelativeLayout" parent="@AppTheme">
        <item name="android:background">@drawable/relative_layout_background</item>
    </style>


</resources>
